<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button_01"
        android:text="1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        />

    <Button
        android:text="2"
        android:id="@+id/button_02"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toEndOf="@id/button_01"
        android:layout_below="@id/button_01"/>

    <Button
        android:text="3"
        android:id="@+id/button_03"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/button_02"
        android:layout_toEndOf="@id/button_02"/>

    <Button
        android:text="4"
        android:id="@+id/button_04"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/button_03"
        android:layout_toEndOf="@id/button_03"
        />

    <Button
        android:text="5"
        android:id="@+id/button_05"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/button_04"
        android:layout_toStartOf="@id/button_04"
        />

    <Button
        android:text="6"
        android:id="@+id/button_06"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/button_05"
        android:layout_toStartOf="@id/button_05"
        />

    <Button
        android:text="7"
        android:id="@+id/button_07"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/button_06"
        android:layout_toStartOf="@id/button_06"
    />



</RelativeLayout>